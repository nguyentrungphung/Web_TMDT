
@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_LayoutInfoShoes.cshtml";
}

<div class="wrapper row">
    <div class="preview col-md-6">
        <div class="preview-pic tab-content">
            <div class="tab-pane active" id="pic-1"><img src="~/Images/@Model.Anhbia" alt=""></div>
            <div class="tab-pane" id="pic-2"><img src="~/Images/@Model.Anhbia" alt""=></div>
            <div class="tab-pane" id="pic-3"><img src="~/Images/@Model.Anhbia" alt""=></div>
            <div class="tab-pane" id="pic-4"><img src="~/Images/@Model.Anhbia" alt""=></div>
        </div>

        <ul class="preview-thumbnail nav nav-tabs">
            <div class="logo__small-img"></div>
            <div class="menu-img"><span></span></div>
            <li class="active">

                <a data-target="#pic-1" data-toggle="tab"><img src="~/Images/@Model.Anhbia" alt""=></a>
            </li>
            <li>
                <a data-target="#pic-2" data-toggle="tab"><img src="~/Images/@Model.Anhbia" alt""=></a>
            </li>
            <li>
                <a data-target="#pic-3" data-toggle="tab"><img src="~/Images/@Model.Anhbia" alt""=></a>
            </li>
            <li>
                <a data-target="#pic-4" data-toggle="tab"><img src="~/Images/@Model.Anhbia" alt""=></a>
            </li>
        </ul>
    </div>

    <div class="details col-md-3">

        <h3 class="product-title">@Model.Tensp</h3>

        <div class="rating">

            <div class="stars">
                <span class="fa fa-star checked"></span> <span class="fa fa-star checked"></span> <span class="fa fa-star checked"></span> <span class="fa fa-star"></span> <span class="fa fa-star"></span>
            </div> <span class="review-no">123 đánh giá</span>
        </div>

        <h4 class="price">Giá bán: @String.Format("{0:0,0}", Model.Giaban) VND</h4>

        <p class="vote">
            <strong>91%</strong> người mua hài lòng với sản phẩm này <strong>(87 bình chọn)</strong>
        </p>

        <h5 class="sizes">
            Kích cỡ:
            <span class="size" data-toggle="tooltip" title="small">36</span>
            <span class="size" data-toggle="tooltip" title="medium">37</span>
            <span class="size" data-toggle="tooltip" title="large">38</span>
            <span class="size" data-toggle="tooltip" title="xtra large">39</span>
            <span class="size" data-toggle="tooltip" title="big-1">40</span>
            <span class="size" data-toggle="tooltip" title="big-2">41</span>
            <span class="size" data-toggle="tooltip" title="big-3">42</span>
            <span class="size" data-toggle="tooltip" title="big-4">43</span>
        </h5>

        <div class="action">

            <a href="@Url.Action("ThemGiohang","GioHang",new { @iMasp= @Model.Masp, @strURL=Request.Url.ToString() })" class="btn btn-info" role="button" style="background-color:orange" border="none">Thêm vào giỏ</a>
            <a href="#" target="_blank"><button class="like btn btn-default" type="button"><span class="fa fa-heart"></span></button> </a>
            <div style="padding-top:15px">
                <iframe src="https://www.facebook.com/plugins/like.php?href=https%3A%2F%2Fdevelopers.facebook.com%2Fdocs%2Fplugins%2F&width=450&layout=standard&action=like&size=small&show_faces=true&share=true&height=80&appId" width="450" height="80" style="border:none;overflow:hidden" scrolling="no" frameborder="0" allowTransparency="true" allow="encrypted-media"></iframe>

            </div>
        </div>

    </div>

</div>
<div class="container-fluid" style="padding-top:20px; margin: 0 auto; width: 80%">
    <div id="fb-root"></div>
    <script async defer crossorigin="anonymous" src="https://connect.facebook.net/vi_VN/sdk.js#xfbml=1&version=v3.2"></script>
    <div class="fb-comments" data-href="https://developers.facebook.com/docs/plugins/comments#configurator" data-numposts="5"></div>
</div>



