
@using Web_1D2C.Models
@model List<Giohang>
@{
    ViewBag.Title = "GioHang";
    Layout = "~/Views/Shared/_LayoutCart.cshtml";
   
<link href="~/Content/index.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/venobox.css" rel="stylesheet" />
    <link href = "~/Content/signup.css" rel = "stylesheet" />

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css">
    <link href="https://use.fontawesome.com/releases/v5.0.4/css/all.css" rel="stylesheet">
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js"></script>
}

<div class="modal-body">
    <h2 class="cart__shoes text-center">Giỏ Hàng Của Bạn</h2>
    <div class="container">
        <table id="cart" class="table table-hover table-condensed">
            <thead>
                <tr>
                    <th style="width:40%">Tên Sản Phẩn</th>
                    <th style="width:10%">Giá</th>
                    <th style="width:8%">Số Lượng</th>
                    <th style="width:22%" class="text-center">Thành Tiền</th>
                    <th style="width:20%"> </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td data-th="Product">
                            <div class="row">
                                <div class="col-sm-2 hidden-xs">
                                    <img src="~/Images/@item.sAnhbia" alt="S?n ph?m 1" class="img-responsive" width="100">
                                </div>
                                <div class="col-sm-10">
                                    <h4 class="nomargin name-Shoes">@item.sTensp</h4>
                                </div>
                            </div>
                        </td>
                        @using (Html.BeginForm("CapnhatGiohang", "Giohang", new { @iMaSp = item.iMasp }))
                        {
                            <td data-th="Price">@String.Format("{0:0,0}", item.dDongia)</td>
                            <td data-th="Quantity"><input class="form-control text-center" min="1" max="20"  name="txtSoluong" value="@item.iSoluong" type="number"></td>
                            <td data-th="Subtotal" class="text-center">@String.Format("{0:0,0}", item.dThanhtien) VND</td>
                            <td class="actions" data-th="">
                                @*<button class="btn btn-info btn-sm"><i class="fa fa-edit"></i></button>*@
                                <a href="@Url.Action("Details", "Shoes", new { id = item.iMasp })" class="btn btn-info" role="button" style="border:none"><i class="fa fa-edit"></i></a>
                                <a href="@Url.Action("XoaGiohang", "GioHang", new { @iMaSp = item.iMasp })" class="btn btn-info" role="button" style="background-color:red; border:none"><i class="fa fa-trash-o"></i></a>
                                <button class="btn btn-info" type="submit" style="border:none; background-color:green"><i class="fa fa-edit"></i></button>
                            </td>
                        }
                    </tr>
                }
            </tbody>
            <tfoot>
                @*<tr class="visible-xs">
                        <td class="text-center">
                            <strong>Tổng @String.Format("{0:0,0}", ViewBag.Tongtien) VND</strong>
                        </td>
                    </tr>*@
                <tr>
                    <td style="display:inline">
                        <a href="@Url.Action("Index","Shoes")" class="btn btn-warning"><i class="fa fa-angle-left"></i> Tiếp tục mua hàng</a>
                        <a href="@Url.Action("XoaTatcaGiohang","GioHang")" class="btn btn-warning" style="background-color:red"><i class="fa fa-angle-left"></i> Xóa Giỏ Hàng</a>

                    </td>
                    <td colspan="2" class="hidden-xs"> </td>
                    <td class="hidden-xs text-center">
                        <strong>Tổng Tiền @String.Format("{0:0,0}", ViewBag.Tongtien) VND</strong>
                    </td>
                    <td>

                        @*<div class="modal fade" id="dialog1" role="dialog" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">

                    <div class="modal-header">

                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>

                    <div class="modal-body">


                        @Html.Action("Dangnhap","Nguoidung")

                    </div>
                </div>
            </div>
        </div>
        @*<button type="button" class="btn btn-primary" data-toggle="modal" data-target="#dialog1">


        </button>*@
                        
                        <a href="@Url.Action("Dathang","GioHang")" class="btn btn-info" role="button">Đặt Hàng</a>

                    </td>
                </tr>
            </tfoot>
        </table>
    </div>
    <div class="col-md-9"> </div>
</div>







