@model Web_1D2C.Models.LOAI

@{
    ViewBag.Title = "Themmoiloai";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align:center;color:blue">Thêm Mới Loại</h2>

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>LOAI</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <h5>Tên Loại</h5>
            <div class="col-md-10">
                @Html.EditorFor(model => model.TenLoai, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.TenLoai, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <h5>Nhà sản xuất</h5>
            <div class="col-md-10">
                @Html.DropDownList("MaNSX", null, new { @class = "form-control" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Thêm mới" class="btn btn-default" style="background-color:deepskyblue; color:white;width:200px" />

            </div>
        </div>
    </div>
}

    <div>
        @Html.ActionLink("Trở về", "Loai")
    </div>
