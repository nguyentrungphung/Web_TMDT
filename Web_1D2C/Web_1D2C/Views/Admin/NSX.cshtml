@model IEnumerable<Web_1D2C.Models.NHASAXUAT>

@{
    ViewBag.Title = "NSX";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh Mục Nhà Sản Xuất</h2>

<p>
    <a href="@Url.Action("ThemmoiNSX","Admin")" class="btn btn-info" role="button">Tạo mới NSX</a>
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.TenNSX)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Diachi)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DienThoai)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenNSX)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Diachi)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DienThoai)
        </td>
        <td>
            <a href="@Url.Action("Chitietnsx", "Admin", new { id = item.MaNSX })" class="btn btn-info" role="button" style="border:none; width:100px; margin-bottom:10px">Chi tiết</a>
            <a href="@Url.Action("Suansx", "Admin", new { id = item.MaNSX })" class="btn btn-info" role="button" style="background-color:green; border:none; width:100px; margin-bottom:10px">Sửa</a>
            <a href="@Url.Action("Xoansx", "Admin", new { id = item.MaNSX })" class="btn btn-info" style="background-color:red;border:none; width:100px; margin-bottom:10px" role="button">Xóa</a>

        </td>
    </tr>
}

</table>
